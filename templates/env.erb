#
# <%= node['snipeit']['path'] %>/.env
#
# Generated by Chef for <%= node['fqdn'] %>
#

APP_ENV=production
APP_DEBUG=<%= node['snipeit']['debug'] %>
APP_KEY=<%= node['snipeit']['php']['app_key'] %>
APP_URL=<%= node['snipeit']['url'] %>
APP_TIMEZONE=<%= node['snipeit']['timezone'] %>
APP_LOCALE=<%= node['snipeit']['locale'] %>

DB_CONNECTION=mysql
<% unless node['snipeit']['database']['domain'] %>
DB_HOST=<%= node['snipeit']['database']['hostname'] %>
<% else %>
DB_HOST=<%= node['snipeit']['database']['hostname'] %>.<%= node['snipeit']['database']['domain'] %>
<% end %>
DB_DATABASE=<%= node['snipeit']['database']['name'] %>
DB_USERNAME=<%= node['snipeit']['database']['username'] %>@<%= node['snipeit']['database']['hostname'] %>
DB_PASSWORD=<%= node['snipeit']['database']['password'] %>
DB_PREFIX=null
DB_DUMP_PATH=<%= node['snipeit']['database']['dump_path'] %>

MAIL_DRIVER=<%= node['snipeit']['smtp']['driver'] %>
MAIL_HOST=<%= node['snipeit']['smtp']['host'] %>
MAIL_PORT=<%= node['snipeit']['smtp']['port'] %>
MAIL_USERNAME=<%= node['snipeit']['smtp']['username'] %>
MAIL_PASSWORD=<%= node['snipeit']['smtp']['password'] %>
MAIL_ENCRYPTION=<%= node['snipeit']['smtp']['encryption'] %>
MAIL_FROM_ADDR=<%= node['snipeit']['smtp']['mailbox'] %>
MAIL_FROM_NAME=<%= node['snipeit']['smtp']['mail_from'] %>
MAIL_REPLYTO_ADDR=<%= node['snipeit']['smtp']['mailbox'] %>
MAIL_REPLYTO_NAME=<%= node['snipeit']['smtp']['replyto'] %>

IMAGE_LIB=gd